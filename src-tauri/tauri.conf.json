{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Circada",
  "version": "1.0.2",
  "identifier": "com.circada.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Circada - Circadian Rhythm Tracker",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "transparent": true,
        "alwaysOnTop": false,
        "label": "main",
        "windowEffects": {
          "effects": [
            "underWindowBackground"
          ],
          "state": "active",
          "radius": 0.25
        }
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ],
    "category": "Healthcare and Fitness",
    "shortDescription": "Circadian Rhythm Tracker",
    "longDescription": "Track your circadian and ultradian rhythms with real-time HealthKit integration, predictive analytics, and personalized insights for optimal energy management.",
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "13.0",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "files": {},
      "dmg": {
        "background": null,
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/maxmaeser/circada/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
